// Common mobile phones
@media screen and (max-width: 480px)
  body
    outline: none
    min-width: 320px
    font-size: 62.5%
    font-size(14)
    // -webkit-tap-highlight-color: rgba(0, 0, 0, 0)

  for i in 0..(length($char) - 1)
    .char_profile.{$char[i]}
      background: #000 image-url('char_' + $char[i] + '_m.jpg') 50% 50% no-repeat
      background-size: 100% auto

